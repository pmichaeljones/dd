.contain-to-grid
  .row.show-for-small-only.bottom-border
    .small-10.columns
      %h2.mobile-logo Doggy Dashboard
    .small-2.columns.logout-zone
      =link_to "Logout", nil, class: 'tiny button radius mobile-transparent'
  .icon-bar.four-up.show-for-small-only
    %a(class="item")
      %i.fi-home.medium-icon
      %label Home
    %a(class="item")
      %i.fi-mail.medium-icon
      %label Email
    %a(class="item")
      %i.fi-guide-dog.medium-icon
      %label + Pet
    %a(class="item")
      %i.fi-address-book.medium-icon
      %label + Client
  %nav.top-bar.collapse.show-for-medium-up(role="navigation")
    %ul.title-area
      %li.name
        %h1= link_to "Doggy Dashboard"
      %li.toggle-topbar.menu-icon
        %span Menu Stuff

    %section.top-bar-section
      %ul.right
        %li.divider
        %li.has-form
          %a(class= "button" href="#")
            New Pet +
        %li.divider
        %li.has-form
          %a(class= "button" href="#")
            New Pet Owner +
        %li.divider
        %li= link_to "Scheduling"
        %li.divider
        %li= link_to "Customer Database"
        %li.divider
        %li.has-dropdown.not-click
          = link_to "Welcome, Mary"
          %ul.dropdown
            %li= link_to "Account"
            %li= link_to "Settings"
            %li= link_to "Log Out"
